<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.moody">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.Moody"
        tools:targetApi="33">
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@drawable/splash_background" />

        <activity
            android:name=".SplashActivity"
            android:exported="true"/>
        <activity
            android:name=".ProfileUpdateActivity"
            android:exported="false" />
        <activity
            android:name=".HomeInfoActivity"
            android:exported="false" />
        <activity
            android:name=".WriteReviewActivity"
            android:exported="false" /> <!-- <activity -->
        <!-- android:name=".ProductActivity" -->
        <!-- android:exported="false" /> -->
        <activity
            android:name=".MetaverseActivity"
            android:exported="false" />
        <activity
            android:name=".Market"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".MarketCartActivity"
            android:exported="false" />
        <activity
            android:name=".SearchActivity"
            android:exported="false" />
        <activity
            android:name=".SignFinishActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfileStartActivity"
            android:exported="false" />
        <activity
            android:name=".SignInActivity"
            android:exported="true" />
        <activity
            android:name=".SignUpActivity"
            android:exported="true" />
        <activity
            android:name=".Store"
            android:exported="true" />
    </application>

</manifest>